<%- model_class = @sale.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:farmer_name) %>:</strong><br>
  <%= @sale.farmer_name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:sale_date) %>:</strong><br>
  <%= @sale.sale_date %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:market_type) %>:</strong><br>
  <%= @sale.market_type %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:location) %>:</strong><br>
  <%= @sale.location %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:volume) %>:</strong><br>
  <%= @sale.volume %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:unit) %>:</strong><br>
  <%= @sale.unit %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:quality) %>:</strong><br>
  <%= @sale.quality %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:commodity) %>:</strong><br>
  <%= @sale.commodity %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:price_received) %>:</strong><br>
  <%= @sale.price_received %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:price_receiptUnit) %>:</strong><br>
  <%= @sale.price_receiptUnit %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              sales_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_sale_path(@sale), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              sale_path(@sale),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
