<%- model_class = Sale.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:farmer_name) %></th>
      <th><%= model_class.human_attribute_name(:sale_date) %></th>
      <th><%= model_class.human_attribute_name(:market_type) %></th>
      <th><%= model_class.human_attribute_name(:location) %></th>
      <th><%= model_class.human_attribute_name(:volume) %></th>
      <th><%= model_class.human_attribute_name(:unit) %></th>
      <th><%= model_class.human_attribute_name(:quality) %></th>
      <th><%= model_class.human_attribute_name(:commodity) %></th>
      <th><%= model_class.human_attribute_name(:price_received) %></th>
      <th><%= model_class.human_attribute_name(:price_receiptUnit) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= link_to sale.id, sale_path(sale) %></td>
        <td><%= sale.farmer_name %></td>
        <td><%= sale.sale_date %></td>
        <td><%#= sale.market_type, :collection => [ "High", "Medium", "Low"]  %></td>
        <td><%= sale.location %></td>
        <td><%= sale.volume %></td>
        <td><%= sale.unit %></td>
        <td><%= sale.quality %></td>
        <td><%= sale.commodity %></td>
        <td><%= sale.price_received %></td>
        <td><%= sale.price_receiptUnit %></td>
        <td><%=l sale.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_sale_path(sale), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      sale_path(sale),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_sale_path,
            :class => 'btn btn-primary' %>
